/**
 * A 16-bit counter with load and reset control bits.
 * if      (reset[t] == 1) out[t+1] = 0
 * else if (load[t] == 1)  out[t+1] = in[t]
 * else if (inc[t] == 1)   out[t+1] = out[t] + 1  (integer addition)
 * else                    out[t+1] = out[t]
 */

CHIP PC {
    IN in[16],load,inc,reset;
    OUT out[16];

    PARTS:
    Inc16(in=originout, out=originoutadd1);
    Mux16(a=false, b=originoutadd1, sel=inc, out=incout);
    Mux16(a=incout, b=in, sel=load, out=loadout);
    Mux16(a=loadout, b=false, sel=reset, out=resetout);
    Or(a=inc, b=load, out=incorload);
    Or(a=incorload, b=reset, out=flags);
    Register(in=resetout, load=flags, out=originout);
    Or16(a=originout, b=originout, out=out);
}
